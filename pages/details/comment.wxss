.comment-item {
  font-size: 26rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  align-items:flex-start; 
  justify-content: flex-start
}
.comment-item > image{
  height: 56rpx;
  width: 56rpx;
  border: 1rpx solid #777;
  border-radius: 10rpx;
  margin-top: 10rpx;
  margin-right: 22rpx;
}

.comment-item .author{
  color: #777;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}
.comment-item .info{
  width: 660rpx;
  text-align:justify;
}